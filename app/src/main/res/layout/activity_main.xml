<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

 <FrameLayout
     android:id="@+id/mainframe"
     android:layout_width="match_parent"
     android:layout_height="0dp"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintBottom_toTopOf="@id/songFrame"
     app:layout_constraintRight_toRightOf="parent"/>
    <FrameLayout
        android:id="@+id/songFrame"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#FBF3F3"
        android:background="@drawable/round_rect_2"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:id="@+id/songFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/frameSongImage"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_rect_2"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/frameSongTitle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true" />


                <ImageView
                    android:id="@+id/frameSongPlay"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/ic_baseline_play_arrow_24" />


            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:translationZ="10dp"
            android:layout_marginLeft="-8dp"
            android:layout_marginRight="-8dp"
            android:layout_below="@id/songFrameLayout">
      <SeekBar
          android:id="@+id/bottom_player_seekbar"
          android:layout_width="match_parent"
          android:layout_height="12dp"
          android:thumbTint="@color/fui_transparent"/>

        </LinearLayout>
        </RelativeLayout>
    </FrameLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="10dp"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>