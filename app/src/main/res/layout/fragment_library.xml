<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragmnets.fragment_library">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/LikeSongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        android:text=""
        android:textColor="#F47676"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="26sp"/>
    <TextView
        android:id="@+id/LikeSongs1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:textStyle=""
        android:textColor="#5A5959"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LikeSongs"
        android:text="we know your likes."
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif"
        android:textSize="20sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/LikeSongsrecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/LikeSongs1"
            android:layout_marginTop="120dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:id="@+id/nolike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_baseline_heart_broken_24"/>
        <TextView
            android:id="@+id/noliketext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#5A5959"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nolike"
            android:text="No,likes"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textSize="12sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>