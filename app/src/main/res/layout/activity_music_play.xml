<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".ui.MusicPlayActivity">
    <ImageView
        android:id="@+id/PlayingSongImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rectangle"
        android:elevation="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/playing_song_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/PlayingSongImage"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/playing_song_artist"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/playing_song_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif-black"
        android:textSize="14sp"/>
    <ImageView
        android:id="@+id/sharesong"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/PlayingSongImage"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_baseline_share_24"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"/>
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/playing_song_artist"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"
            android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/seekbar"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">
<ImageView
    android:id="@+id/previous"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:src="@drawable/ic_baseline_skip_previous_24"
    />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/playMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="70dp"
            android:backgroundTint="#fff"
            android:src="@drawable/ic_baseline_play_arrow_24"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_skip_next_24"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>